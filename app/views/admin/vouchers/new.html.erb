<h2> 新增优惠券 </h2>

<%= form_for [:admin, @voucher] do |f| %>

  <div class="form-group">
    <%= f.label :开始时间 %>
    <%= f.text_field :start_at, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :结束时间 %>
    <%= f.text_field :end_at, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :优惠金额 %>
    <%= f.text_field :amount, :class => "form-control" %>
  <div>

  <br>
  <div class="form-group">
    <%= f.submit "提交", :class => "btn btn-primary" %>
  </div>

<% end %>

<script>
  $("#voucher_start_at").datepicker({ format: "yyyy-mm-dd" });
  $("#voucher_end_at").datepicker({ format: "yyyy-mm-dd" });
</script>
